generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  events    Event[]
  expenses  Expense[]
}

model InvitedUser {
  id      String @id @default(cuid())
  email   String @unique
  eventId String
  event   Event  @relation(fields: [eventId], references: [id])
}

model Event {
  id           String        @id @default(cuid())
  name         String
  userId       String
  createdAt    DateTime      @default(now())
  user         User          @relation(fields: [userId], references: [id])
  expenses     Expense[]
  invitedUsers InvitedUser[]
}

model Expense {
  id        String   @id @default(cuid())
  name      String
  amount    Float
  eventId   String
  addedBy   String
  user      User     @relation(fields: [addedBy], references: [id])
  createdAt DateTime @default(now())
  event     Event    @relation(fields: [eventId], references: [id])
}
